<%- include('layout/header')%>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <%if(message){%>
                <div class="alert alert-dismissible fade show alert-<%=message.type%>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" area-label="Close"></button>
                    <strong><%=message.message%></strong>
                </div>
            <%}%>
            <div class="table-responsive">
                <%if(users!=null){
                    %>
<table class="table table-striped my-4">
    <thead >
        <tr class="table-dark">
            <th>ID</th>
            <th>Image</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>action</th>

        </tr>
    </thead>
    <tbody>
        <%users.forEach((row,index)=>{%>
            <tr class="align-middle">
                <td><%=index%></td>
                <td><img src="<%=row.image%>" alt="<%=row.image%>" width="50" class="image-thumbnail" ></td>
                <td><%=row.name%></td>
                <td><%=row.email%></td>
                <td><%=row.phone%></td>
               <td>
                <a href="/edit/<%=row._id%>" class="text-success"> <i class="fas fa-edit fa-lg mx-1"></i></a>
                <a href="/delete/<%=row._id%>" class="text-danger"> <i class="fas fa-trash fa-lg mx-1"></i></a>
               </td>
            </tr>
       <%})%>
    </tbody>
</table>
<%} else {%>
    <h1 class="text-center text-secondary mt-5">No users Found</h1>
    <%}%>
</div>
</div>
</div>
</div>

<%- include('layout/footer')%>